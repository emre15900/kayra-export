{
  "name": "kayra-export",
  "version": "1.0.0",
  "description": "Micro-frontend product and cart application",
  "scripts": {
    "dev": "concurrently \"yarn dev:home\" \"yarn dev:cart\"",
    "dev:home": "cd home && yarn dev",
    "dev:cart": "cd cart && yarn dev",
    "build": "yarn build:home && yarn build:cart",
    "build:home": "cd home && yarn build",
    "build:cart": "cd cart && yarn build",
    "install:all": "yarn install && cd home && yarn install && cd ../cart && yarn install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}